    <style name="Theme.Shop" parent="Base.Theme.Shop" />

    <style name="bg_gradient">
        <item name="android:background">@drawable/bg_gradient</item>
    </style>

    <style name="Button_style">
        <item name="android:background">@drawable/bg_radius</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_less</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">50dp</item>
        <item name="android:enabled">true</item>
    </style>


    <style name="EditText_style">
        <item name="android:background">@drawable/bg_radius</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:minHeight">56.31dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
