<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="1">

    <Spinner
        android:id="@+id/modal_bottomsheet_account_spinner"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_account"
        android:elevation="7dp"
        android:hint="은행 선택" />


    <EditText
        android:id="@+id/modal_bottomsheet_account_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_account"
        android:elevation="7dp"

        android:hint='"-"없이 계좌 번호 입력'
        android:maxLength="14"
        android:padding="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/modal_bottomsheet_account_btn_commit"
        android:elevation="7dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_checkbutton_gray"
        android:text="완료"
        android:enabled="false"/>
</LinearLayout>