<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Fragment.FragmentPaymentMethodCard">

    <LinearLayout
        android:id="@+id/register_card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_account"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/register_card_plusimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_register"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/register_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="카드 등록하기"
            android:textSize="18sp"
            android:visibility="visible"/>
        <LinearLayout
            android:visibility="gone"
            android:weightSum="1"
            android:id="@+id/register_card_onregister_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="RedAlien Shop" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/register_card_onregister_cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2190 3920 6789 2040"
                android:textSize="15sp"
                android:textColor="@color/white_less"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>